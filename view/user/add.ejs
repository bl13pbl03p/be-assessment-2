<%- include('../partials/head.ejs') %>
<title>Cookingsite - Add recipe</title>

<header>
  <h1><a href="/recipes">Cookingsite</a></h1>
  <nav>
    <ul>
      <li><a href="/profile">My profile</a></li>
      <li><a href="/logout">Log out</a></li>
    </ul>
  </nav>
</header>

<main>

  <form action="/recipes" method="post" enctype=multipart/form-data>

    <fieldset>

      <legend>Add recipe</legend>
      <label>Name
        <input name="Name" type="text" />
      </label>
      <label>Short description
        <textarea name="Description" type="text" rows="5"></textarea>
      </label>
      <label>Ingredients
        <input name="Ingredients" type="text" />
      </label>
      <label>Instructions
        <textarea name="Instructions" type="text" rows="6"></textarea>
      <label>Preview picture
        <input name="Cover" type="file" accept="image/*" />
      </label>

      <input type="submit" name="recipe" />

    </fieldset>

  </form>

</main>

